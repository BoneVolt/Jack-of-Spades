--constants
function str_to_table(str)
 local tab={}
 for i=1,#str do
   if sub(str,i,i)=="," then
     for j=i+1,#str do
       if sub(str,j,j)=="," then
         local s=sub(str,i+1,j-1)
         if (tonum(s)) s=tonum(s)
         add(tab,s)
         i=j
         break
       end
     end
   end
 end
 return tab
end

